    </style>

    <style name="Theme.Darktheme.Checkbox.Base.Dark" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_holo_dark</item>
    </style>

    <style name="Theme.Darktheme.ListView.Base" parent="@android:style/Widget.ListView">
        <item name="background">@color/background</item>
        <item name="android:listSelector">@color/background</item>
        <item name="android:divider">#77222222</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="Theme.Darktheme.ListView.Base.Dark" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/theme_dark_select</item>
        <item name="android:divider">#77EAEAEA</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="Theme.Darktheme.SpinnerItem.Base" parent="android:style/Widget.TextView.SpinnerItem">
        <item name="background">@drawable/theme_light_select</item>
        <item name="android:background">@drawable/theme_light_select</item>
    </style>

    <style name="Theme.Darktheme.SpinnerItem.Base.Dark" parent="android:style/Widget.TextView.SpinnerItem">
        <item name="background">@drawable/theme_dark_select</item>
        <item name="android:background">@drawable/theme_dark_select</item>
    </style>

    <style name="Theme.Darktheme.SpinnerDropDownItem.Base" parent="android:Widget.DropDownItem.Spinner">
        <item name="background">@drawable/theme_light_select</item>
        <item name="android:checkMark">@drawable/btn_radio_holo_light</item>
        <item name="android:background">@drawable/theme_light_select</item>
    </style>

    <style name="Theme.Darktheme.SpinnerDropDownItem.Base.Dark" parent="android:Widget.DropDownItem.Spinner">
        <item name="background">@drawable/theme_dark_select</item>
        <item name="android:checkMark">@drawable/btn_radio_holo_dark</item>
        <item name="android:background">@drawable/theme_dark_select</item>
    </style>

    <style name="Theme.Darktheme.Spinner.Base" parent="@android:style/Widget.Spinner">
        <item name="background">@drawable/spinner_background_holo_light</item>
        <item name="android:divider">#FF222222</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:cacheColorHint">#FFFFFF</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:popupBackground">#DDFFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/list_selector_holo_light</item>
        <item name="android:textColor">#222222</item>

        <!-- This shows as an error in desinger however it works and needs to be here -->
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="Theme.Darktheme.Spinner.Base.Dark" parent="@android:style/Widget.Spinner">
        <item name="background">@drawable/spinner_background_holo_dark</item>
        <item name="android:divider">#77222222</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:cacheColorHint">#FFFFFF</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:popupBackground">#FF222222</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/spinner_background_holo_dark</item>
        <item name="android:dropDownSelector">@drawable/list_selector_holo_dark</item>
        <item name="android:textColor">#CCCCCC</item>

        <!-- This shows as an error in desinger however it works and needs to be here -->
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="Theme.Darktheme.AutoCompleteTextView.Base" parent="@android:style/Widget.AutoCompleteTextView">
