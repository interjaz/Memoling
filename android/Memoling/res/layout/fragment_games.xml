<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemoListFragment" >

    <LinearLayout
        android:id="@+id/adLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/games_hangman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_holo_background"
                    android:gravity="center"
                    android:text="@string/games_hangman"
                    android:textSize="65sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#55FFFFFF" />

                <Button
                    android:id="@+id/games_crossword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_holo_background"
                    android:gravity="center"
                    android:text="@string/games_crossword"
                    android:textSize="60sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#55FFFFFF" />

                <Button
                    android:id="@+id/games_findword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_holo_background"
                    android:gravity="center"
                    android:text="@string/games_findword"
                    android:textSize="65sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#55FFFFFF" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>