<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/app.memoling.android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/linearLayoutLanguageSpinnerFrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <app.memoling.android.ui.control.LanguageSpinner
            android:id="@+id/ankiImport_spLanguageFrom"
            style="@style/Theme.Darktheme.Spinner.Dark"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            app:bold="true"
            tools:listitem="@layout/adapter_textdropdown_dark" />

        <TextView
            android:id="@+id/ankiImport_leftWordFromExamplePair"
            style="@style/Theme.Darktheme.TextView.Dark"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayoutLanguageSpinnerTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutLanguageSpinnerFrom"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <app.memoling.android.ui.control.LanguageSpinner
            android:id="@+id/ankiImport_spLanguageTo"
            style="@style/Theme.Darktheme.Spinner.Dark"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            tools:listitem="@layout/adapter_textdropdown_dark" />

        <TextView
            android:id="@+id/ankiImport_rightWordFromExamplePair"
            style="@style/Theme.Darktheme.TextView.Dark"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayoutLanguageSpinnerTo"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp" >

        <CheckBox
            android:id="@+id/ankiImport_checkBox"
            style="@style/Theme.Darktheme.Checkbox.Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ankiImporter_ctxmenu_languagesSelectionCheckbox" />
    </LinearLayout>

</RelativeLayout>