<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/download_published_lblName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/download_published_lblName"
        android:layout_below="@id/download_published_lblName"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:text="@string/download_published_genre" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:text="@string/download_published_memos" />

    <TextView
        android:id="@+id/download_published_lblGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/download_published_lblName"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@id/textView2"
        android:layout_toRightOf="@id/textView1"
        android:text="TextView" />

    <TextView
        android:id="@+id/download_published_lblMemos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView1"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView2"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textView1"
        android:layout_below="@id/download_published_lblGenre"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp"
        android:text="@string/download_published_language" />

    <TextView
        android:id="@+id/download_published_lblLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView3"
        android:layout_alignBottom="@id/textView3"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_toRightOf="@id/textView3"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-16dp"
        android:paddingLeft="21dp"
        android:text="@string/download_published_downloads" />

    <TextView
        android:id="@+id/download_published_lblDownloads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView3"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView4"
        android:text="TextView" />

</RelativeLayout>