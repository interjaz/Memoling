<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/drawer_adapter_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:minHeight="32dp"
        android:minWidth="32dp"
        android:src="@drawable/ab_background_textured_darktheme" />

    <TextView
        android:id="@+id/drawer_adapter_text"
        style="@style/Theme.Darktheme.TextView.Dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/drawer_adapter_expand_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_expand"
        android:visibility="gone"  />

</LinearLayout>