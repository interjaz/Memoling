<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="DarkButton" parent="@android:style/Widget.Holo.Button">
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:background">@drawable/theme_dark_button</item>
        <item name="android:minHeight">32dip</item>
    </style>
    
    <style name="DarkImageButton" parent="@android:style/Widget.Holo.ImageButton">
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:background">@drawable/theme_dark_button</item>
        <item name="android:minHeight">32dip</item>
    </style>
    
    <style name="DarkTextView" parent="@android:style/Widget.Holo.TextView">
        <item name="android:textColor">#CCCCCC</item>
    </style>
    
    <style name="DarkTheme" parent="android:Theme.Holo.NoActionBar">
        <item name="android:buttonStyle">@style/DarkButton</item>
        <item name="android:imageButtonStyle">@style/DarkImageButton</item>
        <item name="android:textViewStyle">@style/DarkTextView</item>
    </style>
 
</resources>