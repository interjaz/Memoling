<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="DarkButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:background">@drawable/theme_dark_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="DarkEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_dark</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="DarkAutoCompleteTextView" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:popupBackground">#FF1A1A1A</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:dropDownSelector">@drawable/list_selector_holo_dark</item>
        <item name="android:background">@drawable/edit_text_holo_dark</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="DarkSpinner" parent="@android:style/Widget.Spinner">
        <item name="android:divider">#77EAEAEA</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:cacheColorHint">#FFFFFF</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:popupBackground">#FF1A1A1A</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/spinner_background_holo_dark</item>i
        <item name="android:dropDownSelector">@drawable/list_selector_holo_dark</item>
    </style>

    <style name="DarkSpinnerDropDownItem" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@drawable/btn_radio_holo_dark</item>
        <item name="android:background">#FF1A1A1A</item>
    </style>
    
    <style name="DarkSpinnerItem" parent="android:style/Widget.TextView.SpinnerItem">
        <item name="android:background">#FF1A1A1A</item>
    </style>

    <style name="DarkDropDownListViewStyle" parent="@android:style/Widget.ListView.DropDown">
        <item name="android:background">#FF1F1F1F</item>
        <item name="android:divider">#77EAEAEA</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:listSelector">@drawable/theme_dark_select</item>
    </style>

    <style name="DarkListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/theme_dark_select</item>
        <item name="android:divider">#77EAEAEA</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="DarkImageButton" parent="@android:style/Widget.ImageButton">
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:background">@drawable/theme_dark_button</item>
        <item name="android:minHeight">32dip</item>
    </style>

    <style name="DarkCheckbox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_holo_dark</item>
    </style>
       
    <style name="DarkThemeLegacy" parent="android:Theme.NoTitleBar">
        <item name="android:editTextStyle">@style/DarkEditText</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:spinnerStyle">@style/DarkSpinner</item>
        <item name="android:autoCompleteTextViewStyle">@style/DarkAutoCompleteTextView</item>
        <item name="android:listViewStyle">@style/DarkListViewStyle</item>
        <item name="android:dropDownListViewStyle">@style/DarkDropDownListViewStyle</item>
        <item name="android:checkboxStyle">@style/DarkCheckbox</item>
        <item name="android:spinnerDropDownItemStyle">@style/DarkSpinnerDropDownItem</item>
        <item name="android:spinnerItemStyle">@style/DarkSpinnerItem</item>
        
        <!-- That is horrible! I couldn't find any other solution to make dropdown text color behave normally -->
         <item name="android:textColor">@color/theme_dark_select_textcolor</item> 
    </style>

    <style name="DarkTheme" parent="@style/DarkThemeLegacy">
        <item name="android:buttonStyle">@style/DarkButton</item>
        <item name="android:imageButtonStyle">@style/DarkImageButton</item>
    </style>

</resources>