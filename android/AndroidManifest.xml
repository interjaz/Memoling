<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.memoling.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_main"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="app.memoling.android.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="app.memoling.android.ui.activity.MemoListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_memolist"
            android:launchMode="singleTask"
            android:theme="@style/FullscreenTheme"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="app.memoling.android.ui.activity.MemoBaseListActivity"
            android:label="@string/title_activity_memobaselist"
            android:theme="@style/FullscreenTheme"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="app.memoling.android.ui.activity.MemoActivity"
            android:label="@string/title_activity_memo"
            android:theme="@style/FullscreenTheme"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="app.memoling.android.ui.activity.MemoBaseActivity"
            android:label="@string/title_activity_memobase"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="app.memoling.android.ui.activity.ReviewActivity"
            android:label="@string/title_activity_review"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="app.memoling.android.ui.activity.SchedulerActivity"
            android:label="@string/title_activity_scheduler"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="app.memoling.android.ui.activity.StatisticsActivity"
            android:label="@string/title_activity_statistics"
            android:theme="@style/FullscreenTheme"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="app.memoling.android.ui.activity.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="app.memoling.android.ui.activity.FbLoginActivity"
            android:label="@string/title_activity_fb_login"
            android:theme="@style/FullscreenTheme" >
        </activity>

        <receiver
            android:name="app.memoling.android.schedule.AlarmReceiver"
            android:enabled="true"
            android:exported="true"
            android:label="StartMyServiceAtBootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="app.memoling.android.TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name="app.memoling.android.ui.activity.DownloadActivity"
            android:label="@string/title_activity_download" 
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>